<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363636"
    android:configChanges="orientation|keyboardHidden"
    android:gravity="top|start"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    tools:context=".Landscape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="#363636"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="#363636"
            android:gravity="bottom|end"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="#363636"
            android:text="▲"
            android:textColor="#363636" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_weight="0.7"
        android:background="#363636"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#363636"
            android:textColor="#363636"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:background="#363636"
            android:text="▲"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#363636"
            android:textColor="#363636"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#363636"
            android:gravity="end"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top|start"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change"
            android:text="x"
            android:textAllCaps="false"
            android:textSize="30sp" />

        <Button
            android:id="@+id/lpi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change"
            android:text="π"
            android:textAllCaps="false"
            android:textSize="30sp" />

        <Button
            android:id="@+id/le"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change"
            android:text="e"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/llb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change2"
            android:text="("
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/lrb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change2"
            android:text=")"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/lla"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change2"
            android:gravity="center|center_horizontal"
            android:text="←"
            android:textColor="@android:color/white"
            android:textSize="32sp" />

        <Button
            android:id="@+id/lra"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change2"
            android:gravity="center|center_horizontal"
            android:text="→"
            android:textColor="@android:color/white"
            android:textSize="32sp" />

        <Button
            android:id="@+id/lback"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change2"
            android:text="◀"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/lac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change2"
            android:text="AC"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change"
            android:text="y"
            android:textAllCaps="false"
            android:textSize="30sp" />

        <Button
            android:id="@+id/lcos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change"
            android:text="cos"
            android:textAllCaps="false"
            android:textSize="27sp" />

        <Button
            android:id="@+id/llog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change"
            android:text="log"
            android:textAllCaps="false"
            android:textSize="27sp" />

        <Button
            android:id="@+id/l6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/l7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/l8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/l9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/l0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/ldot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change2"
            android:text="."
            android:textColor="@android:color/white"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/lz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change"
            android:text="z"
            android:textAllCaps="false"
            android:textSize="30sp" />

        <Button
            android:id="@+id/lsin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change"
            android:text="sin"
            android:textAllCaps="false"
            android:textSize="27sp" />

        <Button
            android:id="@+id/lpow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change"
            android:text="x^"
            android:textAllCaps="false"
            android:textSize="29sp" />

        <Button
            android:id="@+id/l1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/l2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/l3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/l4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/l5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/lequal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change2"
            android:text="="
            android:textColor="@android:color/white"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change"
            android:text="g"
            android:textAllCaps="false"
            android:textSize="30sp" />

        <Button
            android:id="@+id/ltan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change"
            android:text="tan"
            android:textAllCaps="false"
            android:textSize="27sp" />

        <Button
            android:id="@+id/lcomma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change"
            android:gravity="center"
            android:text="com"
            android:textAllCaps="false"
            android:textSize="27sp" />

        <Button
            android:id="@+id/lpercent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="％"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/ladd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="＋"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/lminus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="－"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/lmul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="×"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ldiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change3"
            android:text="÷"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_change2"
            android:text="Res"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>